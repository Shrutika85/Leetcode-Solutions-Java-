class Solution {
    public TreeNode sortedArrayToBST(int[] nums) {

        return mainTree(nums,0,nums.length-1);
                
    }

    public TreeNode mainTree(int[] nums,int l,int r)
    {
        if(l>r)
        return null;

        int mid=(l+r)/2;

        return new TreeNode(nums[mid],mainTree(nums,l,mid-1),mainTree(nums,mid+1,r));
    }
}
